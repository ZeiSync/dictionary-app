extends ../layout.pug

block content
  .display-4.px-5.mb-3 Update user
  form(method="POST" action="/admin/user/"+user._id).px-5
    .d-flex.justify-content-evenly.bg-light.mb-3.border
      .w-50.p-3
        .mb-3
          label.form-label(for='word') Word
          input#word.form-control(type='text' name='word' required value=word.word)
        .mb-3
          label.form-label(for='wordType') Word Type
          select#wordType.form-select(name="type" value=word.type)
            option(value="nouns") Nouns
            option(value="verbs") Verbs
            option(value="adjectives") Adjectives
            option(value="adverbs") Adverbs
            option(value="pronouns") Pronouns
            option(value="prepositions") prepositions
            option(value="conjunctions") Conjunctions
            option(value="interjections") Interjections
      .w-50.p-3
        .mb-3
          label.form-label(for='pronounce') Pronounce
          input#pronounce.form-control(type='text' name="pronounce" required value=word.pronounce)
        .mb-3
          label.form-label(for='category' value=word.category) Category
          select#category.form-select(name="category")
            option(value="secure" selected) Secure
            option(value="it") IT